<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<HBox id="cardPane" fx:id="cardPane" maxWidth="Infinity" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <HBox prefWidth="100" alignment="CENTER_LEFT">
            <padding>
                <Insets top="0" right="10" bottom="0" left="10" />
            </padding>
            <Label fx:id="id" styleClass="cell_middle_label">
                <minWidth>
                    <!-- Ensures that the label text is never truncated -->
                    <Region fx:constant="USE_PREF_SIZE" />
                </minWidth>
            </Label>
            <Label fx:id="name" text="\$first" styleClass="cell_middle_label" />
            <Label fx:id="weightValue" text="\$first" styleClass="cell_middle_label" />
            <Label fx:id="date" text="\$first" styleClass="cell_middle_label" />
        </HBox>
    </GridPane>
</HBox>